{
    "manifest_version": 2,
    "name": "InfoClock",
    "description": "An alarm clock that wakes you up by giving you a variety of useful information like today's weather.",
    "version": "0.1",
    "background": {
        "scripts": [
            "lib/util.js",
            "lib/qod.js",
            "lib/weather.js",
            "lib/alarm_message.js",
            "config.js",
            "alarm.js"
        ]
    },
    "permissions": [
        "alarms",
        "background",
        "https://api.forecast.io/",
        "http://api.theysaidso.com/"
    ],
    "web_accessible_resources": ["*.mp3"]
}